doctype html
html(lang="en")
  include head.jade
  body
    h1= title
    p This is Sequelize greeting you :)

    h2 Creating a new user
    form(action="/users/create", method="post")
      input(type="text", name="username")
      input(type="submit")

    h2 Users

    ul
    each user in users
      li
        = user.username
        | &nbsp;
        | (
        a(href="/users/" + user.id + "/destroy") Destroy
        | )
        ul
          li
            | Creating a new post:
            form(action="/users/" + user.id + "/posts/create", method="post", style="display: inline")
              input(type="text", name="update")
              input(type="submit")
          each post in user.Posts
            li
              = post.update
              | &nbsp;
              | (
              a(href="/users/" + user.id + "/posts/" + post.id + "/destroy") Destroy
              | )

 
    include disclaimer.jade